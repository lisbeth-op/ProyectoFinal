@page
@model LoginModel

@{
    @*ViewData["Title"] = "Iniciar Seccion";*@
}

<h1>@ViewData["Title"]</h1>
<body style="background-color: #F0EBDC;">

    <div class="row justify-content-center align-items-center" style="height: 75vh;">
        <div class="col-md-4">
        <section>
            <form id="account" method="post">
                    <h2 style="color: #907204 ;">Área de Producción.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="Usuario" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label" style="color: green;">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label" style="color: green;">Contraseña</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary" style="background-color: #907204 ; color: white;">Iniciar</button>
                </div>

            </form>

        </section>
    </div>
</div>
</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
